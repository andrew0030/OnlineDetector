{
  "schemaVersion": 1,
  "id": "online_detector",
  "version": "${version}",

  "name": "Online Detector",
  "description": "Online Detector is a Mod that adds Blocks, that allow you to detect if a Player is online.",
  "authors": ["andrew0030"],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/online-detector",
    "sources": "https://github.com/andrew0030/OnlineDetector",
    "issues": "https://github.com/andrew0030/OnlineDetector/issues"
  },

  "license": "GNU Lesser General Public License v3.0",
  "icon": "logo.png",

  "environment": "*",
  "entrypoints": {
    "main": ["andrews.online_detector.OnlineDetector"],
    "modmenu": [
      "andrews.online_detector.config.ModMenuConfig"
    ],
    "client": [
      {
        "value": "andrews.online_detector.util.ODClientInit"
      }
    ]
  },
  "mixins": ["online_detector.mixins.json"],

  "accessWidener" : "online_detector.accesswidener",

  "depends": {
    "fabricloader": ">=0.14.18",
    "fabric": "*",
    "minecraft": "~1.19.4",
    "java": ">=17",
    "cloth-config2": ">=10.0.96"
  }
}